<% title "WCC Admin login " %>

<div class="container_24">
	<h4>Login to Wester Caravan Camp</h4>
	<div id="login-form">
		<div class="form">

		<% form_tag session_path do -%>
		<div class="fields">
			<div class="field">
				<div class="label"><%= label_tag 'Username' %></div>
				<div class="input"><%= text_field_tag 'login', @login %></div>
			</div>
			<div class="field">
				<div class="label"><%= label_tag 'password' %></div>
				<div class="input"><%= password_field_tag 'password', nil %></div>
			</div>
			<div class="field">
				<div class="checkbox">
					<%= check_box_tag 'remember_me', '1', @remember_me %></p>
					<%= label_tag 'remember_me', 'Remember me' %>
				</div>
			</div>
			<div class="button">
				<%= submit_tag 'Log in', :class=> 'ui-button' %>
			</div>
		</div>
			<% end -%>
		</div>
	</div>
</div>